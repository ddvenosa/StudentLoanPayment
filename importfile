function LoanDetails = importfile(workbookFile, sheetName, startRow, endRow)
%IMPORTFILE Import data from a spreadsheet
%  LOANDETAILS = IMPORTFILE(FILE) reads data from the first worksheet
%  in the Microsoft Excel spreadsheet file named FILE.  Returns the data
%  as a table.
%
%  LOANDETAILS = IMPORTFILE(FILE, SHEET) reads from the specified
%  worksheet.
%
%  LOANDETAILS = IMPORTFILE(FILE, SHEET, STARTROW, ENDROW) reads from
%  the specified worksheet for the specified row interval(s). Specify
%  STARTROW and ENDROW as a pair of scalars or vectors of matching size
%  for dis-contiguous row intervals.
%
%  Example:
%  LoanDetails1 = importfile1("/Applications/MATLAB/desktop files/Random Doc/Loan Details.xlsx", "Loan Details", 2, 11);
%
%  See also READTABLE.
%
% Auto-generated by MATLAB on 28-Mar-2019 15:17:39

%% Input handling

% If no sheet is specified, read first sheet
if nargin == 1 || isempty(sheetName)
    sheetName = 1;
end

% If row start and end points are not specified, define defaults
if nargin <= 3
    startRow = 2;
    endRow = 11;
end

%% Setup the Import Options
opts = spreadsheetImportOptions("NumVariables", 4);

% Specify sheet and range
opts.Sheet = sheetName;
opts.DataRange = "A" + startRow(1) + ":D" + endRow(1);

% Specify column names and types
opts.VariableNames = ["LoanName", "Type", "CurrentBalance", "InterestRate"];
opts.VariableTypes = ["string", "categorical", "double", "double"];
opts = setvaropts(opts, 1, "WhitespaceRule", "preserve");
opts = setvaropts(opts, [1, 2], "EmptyFieldRule", "auto");

% Import the data
LoanDetails = readtable(workbookFile, opts, "UseExcel", false);

for idx = 2:length(startRow)
    opts.DataRange = "A" + startRow(idx) + ":D" + endRow(idx);
    tb = readtable(workbookFile, opts, "UseExcel", false);
    LoanDetails = [LoanDetails; tb]; %#ok<AGROW>
end

end
